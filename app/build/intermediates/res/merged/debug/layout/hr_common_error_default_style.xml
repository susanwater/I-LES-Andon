<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/error_layout">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/listview_error_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dip"
            android:gravity="center_horizontal"
            android:contentDescription="@null"
            android:src="@mipmap/empty_icon_net" />

        心<TextView
        android:id="@+id/loading_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        style="@style/hr_text_14_light_gray"
        android:text="网络不给力啊"
        />

        <TextView
            android:id="@+id/check_network_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/hr_text_14_light_gray"
            android:text="请检查一下您的网络"
            />

        <Button
            android:id="@+id/loading_refreash_btn"
            android:layout_width="110dip"
            android:layout_height="34dp"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/hr_gray_light"
            android:background="@drawable/bg_btn_nodata"
            android:text="重新加载"
            />
    </LinearLayout>

</LinearLayout>
