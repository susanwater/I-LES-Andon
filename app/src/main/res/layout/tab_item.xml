<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@color/background_color_bright_white"
    android:gravity="center" >

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/divider_color" />

    <ImageView
        android:id="@+id/img_of_tab"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/view_divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:contentDescription="com.birun.missionbook.home.TabsFragment"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/img_of_tab"
        android:gravity="center"
        android:textColor="@color/light_gary"
        android:contentDescription="com.birun.missionbook.home.TabsFragment"
        android:textSize="11sp" />

</RelativeLayout>